#!/bin/bash

# Check if $PYFILE is set
if [ -z "$PYFILE" ]; then
    echo "Error: Environment variable \$PYFILE is not set."
    exit 1
fi

# Check if the specified Python file exists
if [ ! -f "$PYFILE" ]; then
    echo "Error: Python file '$PYFILE' does not exist."
    exit 1
fi

# Run the Python script
python3 "$PYFILE"
